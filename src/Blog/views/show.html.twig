{% extends 'layout.html.twig' %}

{% block title post.name %}

{% block body %}

    <div class="page-header">
        <h1>{{ post.name }}</h1>
    </div>

    <div class="row">
        <div class="col-md-12">
            <p class="text-muted">
                {% if post.category_id %}
                    <a href="{{ path('blog.category', {slug: post.categorySlug}) }}" title="{{ post.categoryName }}">
                        {{ post.categoryName}}
                    </a>
                {% endif %}
                {{ post.createdAt | ago }}
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <img class="img-responsive" src=" {{ post.imageUrl }}" alt="{{ post.name }}" style="width: 100%">
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {{ post.content | nl2br }}
        </div>
    </div>

{% endblock %}