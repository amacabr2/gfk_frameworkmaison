<div class="form-group">
    <label for="name">Titre de l'article</label>
    <input id="name" name="name" type="text" class="form-control" value="{{ item.name }}">
</div>
<div class="form-group">
    <label for="slug">Slug de l'article</label>
    <input id="slug" name="slug" type="text" class="form-control" value="{{ item.slug }}">
</div>
<div class="form-group">
    <label for="content">Contenu de l'article</label>
    <textarea id="content" name="content" class="form-control" rows="10">{{ item.content }}</textarea>
</div>